<UserControl x:Class="CodingTrackerWPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodingTrackerWPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Name="CreateWeeklyGoal"
                Content="Set Weekly Goal"
                Style="{StaticResource MaterialDesignFlatButton}"
                Margin="0,5,0,5"
                HorizontalAlignment="Left"
                Command="{Binding ShowTextBox}"/>

        <StackPanel Grid.Row="1"
                    Width="300"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBox Name="WeeklyGoalInput"
                     Width="300"
                     MaxWidth="300"
                     Text="{Binding WeeklyGoalText}"
                     Visibility="{Binding TextBoxVisibility}"
                     materialDesign:HintAssist.Hint="Enter your weekly goal in hours."
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     PreviewTextInput="WeeklyGoalInput_PreviewTextInput"
                     TextWrapping="Wrap"
                     MaxLength="3"/>
            
            <Button Name="SubmitWeeklyGoal"
                    Content="Submit"
                    Width="100"
                    HorizontalAlignment="Right"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0, 20, 0, 0"
                    Visibility="{Binding TextBoxVisibility}"
                    Command="{Binding SubmitWeeklyGoalCommand}"/>
        </StackPanel>        
    </Grid>
</UserControl>
